<%- include ('../../partials/header.ejs'); -%>
<%- include ('../../partials/navbar.ejs'); -%>
<section class="container">
    <div class="row my-4">
        <div class="col-md-12">
            <h1>Articles</h1>
            <div>
              <a href="/admin/articles/new" class="btn btn-primary">
              <i class="fas fa-feather mr-2"></i>
              New Article</a></div>
            <hr>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-md-12">
            <table class="table table-hover table-striped bordered-table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Title</th>
                  <th scope="col">Slug</th>
                  <th scope="col">Category</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <% articles.forEach((articles) => { %>                   
                    <tr> 
                    <th scope="row"><%= articles.id %></th>                        
                    <td><%= articles.title %></td>
                    <td><%= articles.slug %></td>
                    <td><%= articles.category.title %></td>                    
                      <td>
                        <div class="d-flex justify-content-end">
                           <a href="/admin/articles/edit/<%= articles.id %>" class="btn btn-warning mx-1">
                            <i class="fas fa-pen-square mr-2"></i><br>Edit</a>
                           
                           <form method="POST" action="/articles/delete" onsubmit="confirmDelete(event, this)">
                             <input type="hidden" name="id" value="<%= articles.id %>">
                             <button class="btn btn-danger"><i class="fas fa-trash mr-2"></i><br>Delete</button>
                           </form> 

                        </div>
                    </td>
                    </tr>
                <% }) %>
              </tbody>
            </table>
            
        </div>
    </div>
    
</section>      
<%- include ('../../partials/footer.ejs'); -%>
<script>
  const confirmDelete = (event, form) => {
    event.preventDefault();
    const response = confirm("Do you want to delete this Article?");
    if(response){
      form.submit();
    } else {
      
    }
  }
</script>