<%- include ('../../partials/header.ejs'); -%>
<%- include ('../../partials/navbar.ejs'); -%>
<section class="container">
    <div class="row my-4">
        <div class="col-md-12">
            <h1>Categories</h1>
            <div><a href="/admin/categories/new" class="btn btn-primary">
              <i class="fas fa-feather mr-2"></i>
              New Category</a>
            </div>
            <hr>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-md-12">
            <table class="table table-hover table-striped bordered-table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Category</th>
                  <th scope="col">Slug</th>
                  <th scope="col"> </th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach((category) => { %>                   
                  <tr>
                  <th scope="row"><%= category.id %></th>
                  <td><%= category.title %></td>
                  <td><%= category.slug %></td>
                  <td>
                     <div class="d-flex justify-content-end">
                        <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning mx-1">
                          <i class="fas fa-pen-square mr-2"></i><br>Edit</a> 
                        
                        <form method="POST" action="/categories/delete" onsubmit="confirmDelete(event, this)">
                          <input type="hidden" name="id" value="<%= category.id %>">
                          <button class="btn btn-danger"><i class="fas fa-trash mr-2"></i><br>Delete</button>
                        </form> 

                     </div>
                  </td>    
                  </tr>
                <% }) %>   
              </tbody>
            </table>
            
        </div>
    </div>
    
</section>      
<%- include ('../../partials/footer.ejs'); -%>
<script>
  const confirmDelete = (event, form) => {
    event.preventDefault();
    const response = confirm("Do you want to delete this Category?");
    if(response){
      form.submit();
    } else {
      
    }
  }
</script>